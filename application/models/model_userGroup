<?php

Class model_userGroup extends CI_Model {
    function __construct() {
        parent::__construct();
    }

    public function GetUserGroup($userID) {
        $this->db->where('userID', $userID);
        $this->db->join();

        if ($query->num_rows >= 1) {
            return $query->result();
        }
        return false;
    }
}
?>